{% extends 'layouts/default.njk' %}

{% block content %}

<div class="container {{ ui.containerClass }}">

	<div class="columns is-centered">
		<div class="column is-one-third">

			<h1 class="title mb-6">{{ title }}</h1>

			<form action="/auth/login" method="post">

				<div class="field">
					<label class="label">Email address</label>
					<div class="control">
						<input class="input" type="email" name="email" placeholder="" value="{{payload.email}}">
					</div>
				</div>

				<button class="button is-primary is-fullwidth">Log in</button>

				{% include 'partials/form_security.njk' %}

			</form>

		</div>
	</div>


</div>

{% endblock %}