{% extends 'layouts/default.njk' %}

{% block content %}

<div class="container {{ui.containerClass}}">

	<div class="columns is-centered">
		<div class="column is-one-third">

			<h1 class="title mb-6">{{ title }}</h1>

			<form action="/auth/register/verify" method="post">

				<div class="content">
					<p>We have sent a verification code to <strong>{{email}}</strong>.</p>
					<p>Enter the code in the box below.</p>
				</div>

				<div class="field">
					<label class="label">Verification code</label>
					<div class="control">
						<input class="input" type="text" placeholder="" name="code" maxlength="6">
					</div>
				</div>

				<button class="button is-primary is-fullwidth">Verify email</button>

				{% include 'partials/form_security.njk' %}

			</form>

		</div>
	</div>


</div>

{% endblock %}