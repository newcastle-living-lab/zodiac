{% extends 'layouts/default.njk' %}

{% import './macros/comment.njk' as commentMacro %}
{% import './macros/activity.njk' as activityMacro %}


{% block content %}

<div class="container {{ ui.containerClass }}">

	<div class="columns">
		<div class="column is-one-quarter">
			<h2 class="title is-5 block">Activities</h2>
			<p class="block"><a href="javascript:;" class="button is-success is-rounded is-outlined">Add activity</a></p>
			{{ activityMacro.activity("Project Plan", "Plan of the main project area") }}
			{{ activityMacro.activity("Map", "Geographic location of the buildings involved and their surroundings") }}
			{{ activityMacro.activity("Schematic", "And other associated drawings") }}
		</div>
		<div class="column is-three-quarters">
			<h1 class="title mb-6">{{ title }}</h1>
			<figure class="image is-fullwidth">
				<img src="https://via.placeholder.com/640x480/dbdbdb/222222?text=Selected%20Activity">
			</figure>
		</div>
	</div>
	<div class="columns">
		<div class="column">
			<hr>
			<h2 class="title is-2 block">Comments for selected activity</h2>

			{{ commentMacro.comment("John Smith", "I made this comment about this part of the session. I liked what was being proposed", 1637338887605) }}
			{{ commentMacro.comment("Fox Mulder", "I made another comment here. I wasn't as happy about this comment and need people to see my perspective", 1637331519081) }}
			{{ commentMacro.comment("Dana Scully", "A comment was made by a user about this. It was short.", 1637331018081) }}
		</div>
	</div>


</div>

{% endblock %}